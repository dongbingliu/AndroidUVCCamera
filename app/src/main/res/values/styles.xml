<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="btn_style">
        <item name="android:layout_width">180px</item>
        <item name="android:layout_height">100px</item>
        <item name="android:onClick">onClick</item>
        <item name="android:textSize">24pt</item>
    </style>

    <style name="img_style">
        <item name="android:layout_width">320px</item>
        <item name="android:layout_height">240px</item>
        <item name="android:onClick">onClick</item>
    </style>

</resources>
